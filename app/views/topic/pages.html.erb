<div class="page-content">
  <div class="left-page-content">
    <span class="<%= @jumps[:first][0] %>" tag="<%= @jumps[:first][1] %>">&lt;&lt;</span>
    <span class="<%= @jumps[:prev][0] %>" tag="<%= @jumps[:prev][1] %>">&lt;</span>
  </div>
  <div class="center-page-content">
    <% @pagings.each do |page, cls| %>
      <span class="<%= cls %>" tag="<%= page %>"><%= page %></span>
    <% end %>
  </div>
  <div class="right-page-content">
    <span class="<%= @jumps[:next][0] %>" tag="<%= @jumps[:next][1] %>">&gt;</span>
    <span class="<%= @jumps[:last][0] %>" tag="<%= @jumps[:last][1] %>">&gt;&gt;</span>
  </div>
</div>

<div class="topic-content">
  <% @articles.each do |article| %>
    <div class="article-link">
      <div class="line1">
        <span class="article-title">
          <i class="icon-paw"></i>
          <%= article.title %>
        </span>
      </div>
      <div class="line2">
        <span class="article-posted" posted="<%= article.posted %>">
          <i class="icon-calendar"></i>
          <%= article.posted %>
        </span>
        <% article.tags.each do |tag| %>
          <span class="article-tag" tag="<%= tag %>">
            <i class="icon-tags-1"></i>
            <%= tag %>
          </span>
        <% end %>
        <span class="article-id"><%= article.gist_id %></span>
      </div>
    </div>
  <% end %>
</div>

